<div class="container">
    <div class="section text-left">
        <div class="row">
            <div class="col-md-8 ml-2 mr-auto">
                <h2 class="title">{{product.name}}</h2>
                <h5 class="description"></h5>
            </div>
        </div>
        <div class="features">
            <div class="row">
                <!-- Picture -->
                <div class="col-md-5">
                    <img src="{{product.img}}" alt="Rounded Image" class="rounded img-fluid">
                </div>
                <!-- Info -->
                <div class="col-md-7">
                    <div class="icon icon-success">
                        <i class="material-icons">verified_user</i> <b>Thông tin sản phẩm: </b>
                    </div>
                    <!-- Nhà sản xuất -->
                    <h4 class="info-title">Nhà sản xuất:</h4>
                    <p>Bilizard</p>
                    <!-- Tình trạng -->
                    <h4 class="info-title">Tình trạng:</h4>
                    {{#if product.isOutOfStock}}
                    <p style="display: inline" style="color: red">{{product.condition}}</p>
                    {{else}}
                    <p style="display: inline">{{product.condition}}</p>
                    {{/if}}
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-5">
                    <button class="btn btn-success btn-block">Mua hàng</button>
                </div>   
                {{#if product.isDiscounted}}
                
                <div class="col-3">
                    <h3 style="color: orangered"><del>{{product.price}} VNĐ</del></h3>
                </div>
                <div class="col-4">
                    <h3><b>{{product.promotionprice}} VNĐ </b></h3>
                </div>
                {{else}}
                <div class="col-7">
                    <h3><b>{{product.price}} VNĐ </b></h3>
                </div>
                {{/if}}                        
                
            </div>

            <div class="row mt-2 ml-2">
                <h4 class="info-title" style="padding: 0; margin: 0px 4px 0px 0px;">Tags:</h4>
                {{#each producttags}}
                <a href="/tag/{{idtag}}"><span class="badge badge-pill badge-secondary">{{name}}</span></a>
                {{/each}}
            </div>

            <div class="row mt-3">
                <div class="card card-nav-tabs">
                    <div class="card-header card-header-danger">
                        <!-- colors: "header-primary", "header-info", "header-success", "header-warning", "header-danger" -->
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <ul class="nav nav-tabs" data-tabs="tabs">   
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#detail" data-toggle="tab">
                                            <i class="material-icons">info</i> Chi tiết
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#config" data-toggle="tab">
                                            <i class="material-icons">build</i> Cấu hình
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body ">
                        <div class="tab-content text-center">
                            <div class="tab-pane active" id="detail">
                                <p> {{product.detail}} </p>
                            </div>
                            <div class="tab-pane" id="config">
                                <p> {{product.config}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>