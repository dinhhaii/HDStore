<div class="card card-nav-tabs mt-5">
    <div class="card-header card-header-success">{{title}}</div>
    <div class="card-body ">
        <div class="row">
            {{#each products}}
            <div class="col-4">
                <div class="card bg-dark">
                    <div class="card-body" style="height: 300px">
                        <h4><strong>{{name}}</strong></h4>
                        <a href="/product/{{id}}"><img src="{{img}}" style="width: 100%; height: 60%;" alt=""></a>
                        <h6>{{condition}}</h6>
                        <div class="row">                            
                            {{#if isDiscounted}}
                            <div class="col-6"><h4>{{promotionprice}} VND</h4></div>
                            <div class="col-6"><h4 style="color: orangered"><del>{{price}} VND</del></h4></div>
                            {{else}}
                            <div class="col-6"><h4>{{price}} VND</h4></div>
                            {{/if}}
                        </div>
                        
                    </div>
                    <div class="card-footer">
                        <div class="row" style="width: 100%;">
                            <div class="col-6">
                                <a class="btn btn-danger" href="/product/{{id}}" style="width: 100%;">Chi tiáº¿t</a>
                            </div>
                            <div class="col-6">
                                <a class="btn btn-success" style="width: 100%;">Mua</a>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
            {{/each}}            
        </div>
        <div class="row">
            <ul class="pagination pagination-info">
                <li class="page-item">
                  <a href="?page=1" class="page-link"><i class="fa fa-angle-left"></i></a>
                </li>
                {{#each pages}}
                {{#if active}}
                <li class="active page-item"><a href="#" class="page-link">{{value}}</a></li>
                {{else}}
                <li class="page-item"><a href="?page={{value}}" class="page-link">{{value}}</a></li>
                {{/if}}
                {{/each}}
                <li class="page-item">
                    <a href="?page={{pages.length}}" class="page-link"><i class="fa fa-angle-right"></i></a>
                  </li>
            </ul>     
        </div>

    </div>
</div>